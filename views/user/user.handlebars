<div id="personalInfo" class="row container">
    <fieldset>
        {{!-- <form> --}}
            <legend>Personal Information</legend>
            {{!-- <h2>Personal Information</h2> --}}
            <img src="/user/profilepic/{{id}}" onerror="this.src='/public/image/blank-profile-picture.png'" alt="Profile Picture" class="profilePic" width = "200px" height="200px">
            <br>
            <table class="table col">
                <tbody>
                    <tr>
                        <td>username</td>
                        <td>{{userName}}</td>
                    </tr>
                    <tr>
                        <td>email</td>
                        <td>{{userEmail}}</td>
                    </tr>
                    <tr>
                        <td>Registration Date</td>
                        <td>{{userRegistDate}}</td>
                    </tr>
                    <tr>
                        <td>Your Score</td>
                        <td>{{userScore}}</td>
                    </tr>
                </tbody>
            </table>
            <button id="personalInfoChangePasswordButton" class="btn btn-primary">change password</button>
    </fieldset>

    <form id="profilepictureForm" action="/user/upload/profilepic"  enctype="multipart/form-data" method="POST"> 
     <p class="homeheading">Change your profile picture</p>
    <img src="/users/profilepic/{{id}}" onerror="this.src='/public/images/blank-profile-picture.png'" alt="Profile Picture" class="profilePic">
    <br>
    <br>
            <label>
            <input type="file" name="profilePicture" accept=".png, .jpeg, .jpg" class="btn" required/>
            </label>
        
            <input type="submit" value="Upload and Submit"/>

            {{#if error}}
            <p class="error">{{error}}</p>
             {{/if}}
    </form>

</div>
<div id='changePassword' class="row container">
    <fieldset>
        <legend>Change Password</legend>
        <form id="changePasswordForm">
            <table class="table col">
                <tr>
                    <td><label for="changePasswordFormOldPassword">Password</label></td>
                    <td><input type="password" id="changePasswordFormOldPassword"></td>
                </tr>
                <tr>
                    <td><label for="changePasswordFormNewPassword">New Password</label></td>
                    <td><input type="password" id="changePasswordFormNewPassword"></td>
                </tr>
                <tr>
                    <td><label for="changePasswordFormNewPasswordCheck">Please input new password again</label></td>
                    <td><input type="password" id="changePasswordFormNewPasswordCheck"></td>
                </tr>
            </table>
            <div class="progress row" id="progressBar">
                <div class="progress-bar"> </div>
            </div><br><br>
            <div>
                <button id="changePasswordFormSubmitButton" class="btn btn-primary">submit change</button>
            </div>
            <p id="changePasswordFormStatus" class="text-danger"></p>
        </form>
    </fieldset>
</div>
